set $mode_launcher Launch: [f]irefox [g]oogle-chrome [k]setxkbmap [c]alender [t]eamviewer [p]avucontrol [n]autilus [v]irtualbox
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox, mode "default"
    bindsym g exec google-chrome, mode "default"
    bindsym k exec "setxkbmap -option grp:alt_shift_toggle us,ca", mode "default"
    bindsym c exec zenity --title Calendar --calendar, mode "default"
    bindsym t exec teamviewer, mode "default"
    bindsym p exec pavucontrol, mode "default"
    bindsym n exec nautilus --no-desktop, mode "default"
    bindsym v exec virtualbox, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
