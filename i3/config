# custom keys
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -c 000000, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    #bindsym s exec --no-startup-id i3-msg suspend, mode "default"
    #bindsym h exec --no-startup-id i3-msg hibernate, mode "default"
    bindsym Shift+r exec --no-startup-id sudo reboot, mode "default"
    bindsym Shift+s exec --no-startup-id sudo poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"
bindsym $mod+Pause exec --no-startup-id i3lock -c 000000, mode "default"

exec --no-startup-id "xbindkeys"
exec --no-startup-id "sleep 5 && setxkbmap -option grp:alt_shift_toggle us,ca"
#exec --no-startup-id google-chrome
exec --no-startup-id firefox

bindsym --release Print exec scrot -s -f -e 'mv $f /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png'
bindsym --release Mod1+Print exec scrot -u -e 'mv $f /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png'
bindsym --release $mod+Print exec --no-startup-id scrot -s -f -e 'eog $f'

# ui for sound volume: pavucontrol
bindsym XF86AudioMute exec amixer -D pulse set Master toggle
bindsym XF86AudioRaiseVolume exec amixer -D pulse set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse set Master 5%-

